<div class="container"  style="height: 1200px;">
  <h4 class="row bg-light" style="width: 100px">商品一覧</h4>
    <div class="row">
          <% @items.each do |item| %>
          <div class="col-3">
          <%= link_to item_path(item.id) do %>
          <% if item.image.attached? %>
          <%= image_tag item.image, size: "200x120" %>
          <% else %>
          <%= image_tag 'no_image', size: "200x120" %>
          <% end %>
          <% end %>
          <p><%= item.name %></p>
          <p>¥<%= item.price %></p>
      </div>
    <% end %>
    </div>
    <%= paginate @items %>
</div>