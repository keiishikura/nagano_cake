<div class="container mx-auto mt-3" style="width: 900px;">
  <h4 class="form-group row bg-light" style="width: 130px">マイページ</h4>

   <div class="row mt-3">
    <div class="col-2">
    登録情報
    </div>
    <div class="col-4">
    <%= link_to "編集する" ,edit_customer_path,class:"btn btn-success" %>
    </div>
   </div>

    <div class="row">
      <table class="table table-bordered">
      　<thead class="thead-light">
        　<tr>
          　<th scope="col">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
          　</tr>
          　<th scope="col">フリガナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          　</tr>
          　<th scope="col">郵便番号</th><td><%= @customer.postal_code %></td>
          　</tr>
          　<th scope="col">住所</th><td><%= @customer.address %></td>
          　</tr>
          　<th scope="col">電話番号</th><td><%= @customer.telephone_number %></td>
          　</tr>
          　<th scope="col">メールアドレス</th><td><%= @customer.email %></td>
            </tr>
          </tr>
      　</thead>
      </table>
    </div>

   <div class="row mt-3">
    <div class="col-2">
    配送先
    </div>
    <div class="col-4">
    <%= link_to "一覧を見る" ,addresses_path,class:"btn btn-primary" %>
    </div>
   </div>

   <div class="row mt-3">
    <div class="col-2">
    注文履歴
    </div>
    <div class="col-4">
    <%= link_to "一覧を見る" ,orders_path,class:"btn btn-primary" %>
    </div>
</div>
