<body>
  <h1>商品詳細</h1>
    <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
    <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
    <% end %>

    <p>商品名:<%= @item.name %></p>
    <p>商品説明:<%= @item.introduction %></p>
    <p>ジャンル:<%= @item.genre_id %></p>
    <p>税込価格:<%= @item.price %></p>
    <p>販売ステータス:<%= @item.is_active %></p>

  <%= link_to "編集する" ,edit_admin_item_path(@item.id) %>
</body>
