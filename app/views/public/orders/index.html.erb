<div class="content">
  <div class="container mx-auto" style="width: 900px; height: 600px;">
    <h4 class="form-group row bg-light" style="width: 150px">注文履歴一覧</h4>
      <table class="table table-bordered">
      　<thead class="thead-light">
        　<tr>
          　<th scope="col">注文日</th>
          　<th scope="col">配送先</th>
          　<th scope="col">注文商品</th>
          　<th scope="col">支払金額</th>
          　<th scope="col">ステータス</th>
          　<th scope="col">注文詳細</th>
        　</tr>
      　</thead>
      　<tbody>
        　<% @orders.each do |order| %>
        　<tr>
          　<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
　        　<td><%= order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %></br>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
            </td>
　        　<td><%= order.total_payment %></td>
　        　<td><%= order.status_i18n%></td>
          　<td><%= link_to "表示する" ,order_path(order.id),class:"btn btn-primary" %></td>
        　</tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>