<div class="container mx-auto m-3" style="width: 450px;">
  <form class>
    <h4 class="form-group row bg-light" style="width: 200px">発送先登録/一覧</h4>
      <%#= form_with model: @address, url: addresses_path do |f| %>

        <div class="form-group row">
          <div class="col-4 col-form-label">
          郵便番号
          </div>
          <div class="col-8">
          <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4 col-form-label">
          住所
          </div>
          <div class="col-8">
          <%= f.text_field :address %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4 col-form-label">
          宛名
          </div>
          <div class="col-4 col-form-label">
          <%= f.text_field :name %>
          </div>
          <div class="col-4 mx-auto" style="width: 900px">
          <%= f.submit "新規登録",class:"btn btn-success" %>
          </div>
        </div>
      <% end %>

      <table class="table">
      <thead>
        <tr class="table-light">
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
　        <td><%= address.address %></td>
　        <td><%= address.name %></td>
          <td><%= link_to "編集する" ,cart_item_path(@address.id),class:"btn btn-danger",method: :delete,"data-confirm" => "本当に消しますか?" %>
          <%= link_to "削除する" ,cart_item_path(@address.id),class:"btn btn-danger",method: :delete,"data-confirm" => "本当に消しますか?" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </form>
</div>
